.col-sm-12.py-4.d-flex.flex-column
  bomb-page-header([title]="'LOBBY.TITLE' | translate")

  .row.mt-5.rooms-list-header
    span(translate) LOBBY.ROOMS_LIST
    button.ml-5.button-primary(translate, (click)="createAndEntryRoom()") LOBBY.ADD_AND_ENTRY


  .row.mt-5.justify-content-center
    div(*ngFor="let room of (rooms$ | async)")
      .row
        div.tile([ngClass]="{'canEntry': !(room.users.length < 4)}")
          span.header {{ room.id }}
          div.users(*ngFor="let user of room.users")
            span {{ user }}
          span.next(*ngIf="room.users.length < 4", translate, (click)="navigateToRoom(room.id)") LOBBY.ENTRY_ROOM
