.container-fluid
  .row.justify-content-center
    .col-12
      h1.text-danger.mt-5.mb-5.text-center Bomberman

      .container.col-3.p-5.justify-content-center
        form(id="loginForm", name="loginForm", #loginForm="ngForm", (ngSubmit)="onSubmit(loginForm)")
          .form-group
            label.required(for="login", translate) AUTH.LOGIN
            input#login.form-control(name="login", [(ngModel)]="username", #login="ngModel", required)
            bomb-validation-errors([for]="login")
              bomb-validation-error(name="required") {{ 'VALIDATION.REQUIRED' | translate }}
              bomb-validation-error(name="userExists") {{ userExistsErrorMessage }}

          button.btn.btn-primary.btn-block.mt-5(type="submit", translate) AUTH.SIGN_IN


