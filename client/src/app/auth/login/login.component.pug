.container-fluid
  .row.justify-content-center
    .col-12
      h1.text-danger.mt-5.mb-5.text-center Bomberman

      .container.col-3.p-5.justify-content-center
        form([formGroup]="myForm", (ngSubmit)="onSubmit()")
          .form-group
            label.required(for="username", translate) AUTH.LOGIN
            input#username.form-control(formControlName="username")
            span.error(*ngIf="myForm.get('username').hasError('usernameExists')", translate) AUTH.USERNAME_EXISTS

          button.btn.btn-primary.btn-block.mt-5(type="submit", translate) AUTH.SIGN_IN


